style.css
body {
  font-family: Arial, sans-serif;
  background-color: #f4f4f4;
  text-align: center;
}

.container {
  max-width: 800px;
  margin: 20px auto;
}

.image-wrapper {
  position: relative;
  display: inline-block;
}

.base-image {
  width: 400px;
  border: 2px solid #333;
  border-radius: 5px;
}

.text-overlay {
  position: absolute;
  top: 20%;
  left: 10%;         /* starting position */
  width: 150px;
  display: none;     /* hidden initially */
  transition: left 1s ease; /* smooth move */
}

/* when move class is added, overlay shifts to 60% */
.text-overlay.move {
  left: 60%;
}

.controls {
  margin-top: 20px;
}

/* normal button styles */
.controls button {
  padding: 10px 20px;
  margin: 5px;
  border: none;
  background-color: #007BFF;
  color: white;
  cursor: pointer;
  border-radius: 5px;
}

.controls button:hover {
  background-color: #0056b3;
}

script.js
$(function () {
  // Fade In overlay
  $('#fade-in').on('click', function () {
    $('.text-overlay').fadeIn(400);
  });

  // Fade Out overlay
  $('#fade-out').on('click', function () {
    $('.text-overlay').fadeOut(400);
  });

  // Animate overlay (move to 60% then back to 10%)
  $('#animate').on('click', function () {
    var $overlay = $('.text-overlay');

    // If hidden, fade it in first then animate
    if (!$overlay.is(':visible')) {
      $overlay.fadeIn(200, function () {
        // force reflow to ensure transition registers
        void this.offsetWidth;
        $overlay.addClass('move');

        // after 1s (duration of transition) remove class to move back
        setTimeout(function () {
          $overlay.removeClass('move');
        }, 1000);
      });
    } else {
      // already visible: add class then remove after 1s
      $overlay.addClass('move');
      setTimeout(function () {
        $overlay.removeClass('move');
      }, 1000);
    }
  });
});
