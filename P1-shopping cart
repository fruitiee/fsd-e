  <div class="cart">
    <h3>Cart</h3>
    <ul id="cart-items"><li>No items added.</li></ul>
  </div>

  <script>
    const cartItems = document.getElementById('cart-items');
    let itemsInCart = [];

    function addToCart(name, price) {
      if (itemsInCart.length === 0) cartItems.innerHTML = '';
      const item = itemsInCart.find(i => i.name === name);
      item ? item.qty++ : itemsInCart.push({ name, price, qty: 1 });
      renderCart();
    }

    function removeFromCart(name) {
      itemsInCart = itemsInCart.filter(i => i.name !== name);
      cartItems.innerHTML = itemsInCart.length ? '' : '<li>No items added.</li>';
      if (itemsInCart.length) renderCart();
    }

    function renderCart() {
      cartItems.innerHTML = '';
      itemsInCart.forEach(item => {
        const li = document.createElement('li');
        li.textContent = `${item.name} - $${item.price} x ${item.qty}`;
        const btn = document.createElement('button');
        btn.textContent = 'Remove'; btn.className = 'remove-btn';
        btn.onclick = () => removeFromCart(item.name);
        li.appendChild(btn); cartItems.appendChild(li);
      });
    }
  </script>
</body>
